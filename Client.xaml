<Window x:Class="KlientSerwer.Client"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KlientSerwer"
        mc:Ignorable="d"
        Title="Client" Height="450" Width="800">
    <Grid>
        <Label Content="Choose Rock, Paper, or Scissors:" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" FontSize="16"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0">
            <Button Content="Rock" Width="100" Height="50" Margin="10" Click="ChoiceButton_Click"/>
            <Button Content="Paper" Width="100" Height="50" Margin="10" Click="ChoiceButton_Click"/>
            <Button Content="Scissors" Width="100" Height="50" Margin="10" Click="ChoiceButton_Click"/>
        </StackPanel>
        <Label x:Name="ResultLabel" Content="" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="Red"/>
    </Grid>
</Window>
